//Setup
init();
setTempo(120);

//Music
fitMedia(Y33_CHOIR_1, 1, 1, 17);
fitMedia(RD_ELECTRO_DRUM_PART_10, 2, 1, 17);

var measures = 17;
var increment = 1/12;	//used to increment the loop counter 1/12th of a measure.
var startLocation = 1;	//our loop counter
while (startLocation < measures) { //we loop until startLocation has been incremented to be greater than measures.
	setEffect(1, VOLUME, GAIN, 0, startLocation, -60, startLocation + increment);
	startLocation = startLocation + increment;
}

//Finish
finish();
