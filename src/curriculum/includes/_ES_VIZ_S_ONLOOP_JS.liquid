function onLoop(){
	var amp1 = getSmoothAmplitude(1);
	var amp2 = getSmoothAmplitude(2);
	var amp3 = getSmoothAmplitude(3);
	var MAX_CIRCLE_SIZE = getCanvasHeight();
	
	drawRectangle(0,0,getCanvasWidth(), getCanvasHeight(), "#000000");
	
	var i = 0;
	
	for (i = 0; i < rCircleXs.length; i++) {
		drawCircle(rCircleXs[i], rCircleYs[i], MAX_CIRCLE_SIZE*amp1, rgbaToHex(255,0,0,28+Math.floor(amp1*227)));
	}
	for (i = 0; i < gCircleXs.length; i++) {
		drawCircle(gCircleXs[i], gCircleYs[i], MAX_CIRCLE_SIZE*amp2, rgbaToHex(0,255,0,28+Math.floor(amp2*227)));
	}
	for (i = 0; i < bCircleXs.length; i++) {
		drawCircle(bCircleXs[i], bCircleYs[i], MAX_CIRCLE_SIZE*amp3, rgbaToHex(0,0,255,28+Math.floor(amp3*227)));
	}
}