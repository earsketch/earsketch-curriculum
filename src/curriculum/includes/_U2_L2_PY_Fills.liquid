#Setup
from earsketch import *

init();
setTempo(100);

#Music
mainBeat = "0+--0+-0+0++0+++";
fill = "0+--0+-00+0-0000";

drums = ELECTRO_DRUM_MAIN_BEAT_005;


for measure in range(1, 17):
	if measure % 4 == 0:        # Check if measure is divisible by 4. If it is (and it will be every 4 measures), then add the drum fill below...
		makeBeat(drums, 1, measure, fill);
	else:                       # ... otherwise, add this beat!
		makeBeat(drums, 1, measure, mainBeat);

#Finish
finish();
